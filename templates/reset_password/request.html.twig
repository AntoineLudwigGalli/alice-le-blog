{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
   
    <h1 class="text-center my-5">Réinitialiser votre mot de passe</h1>
    <div class="row">
        <div class="col-10 offset-1">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Saisissez votre adresse mail et nous vous enverrons un mail
                    contenant le lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            
            <button class="btn btn-primary">Envoyer le mail de
                réinitialisation de mot de passe</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
